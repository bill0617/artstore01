<div class="row">
	<div class="col-md-12">
		<h2>購物明細</h2>	

		<table class="table table-bordered">
			<thead>
				<tr>
					<th>商品明細</th>
					<th>數量</th>
					<th>價錢</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% current_cart.items.each do |product| %>
					<tr>
						<td><%= link_to product.title, product %></td>
						<td><%= product.quantity %></td>
						<td><%= product.price %></td>
						<td><%= product.quantity * product.price %></td>
					</tr>
				<% end %>
			</tbody>
		</table>	
		<br>

		<div class="total clearfix">
			<span class="pull-right"> 總計 <%= render_total_price(current_cart) %> NTD</span>
		</div>

		<hr>
		<h2>訂單資訊</h2>
		<div class="order-form">
			<%= simple_form_for @order do |f| %>
				<%= f.simple_fields_for :info do |c| %>
					<legend>訂購人</legend>
					<div class="form-group col-md-6">
					<%= c.input :billing_name %>
					</div>
					<div class="form-group col-md-6">
					<%= c.input :billing_address %>
					</div>

					<legend>收件人</legend>
					<div class="form-group col-md-6">
					<%= c.input :shipping_name %>
					</div>
					<div class="form-group col-md-6">
					<%= c.input :shipping_address %>
					</div>
				<% end %>
				
				<div class="checkout">
				<%= f.submit "生成訂單", class: "btn btn-danger pull-right",
																data: {disable_with: "Submitting..."} %>
				<% end %>
				</div>
		</div>

	</div>
</div>