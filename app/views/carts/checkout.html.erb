<div class="row">
	<div class="col-md-12">
		<h2>購物明細</h2>
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<th width="80%">商品明細</th>
					<th>單價</th>
					<th>數量</th>	
					<th>小計</th>				
				</tr>
			</thead>
			<tbody>
				<% current_cart.cart_items.each do |item| %>
				<tr>
					<td>
						<%= link_to item.product.title, product_path(item)  %>
					</td>
					<td>
						<%= item.product.price %>
					</td>
					<td>
						<%= item.quantity %>
					</td>
					<td>
						<%= item.product.price * item.quantity %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>	
	
		<div class="checkout clearfix">
			<span class="pull-right">
				總計 <%= render_total_price(current_cart) %> NTD
			</span>
		</div>

		<hr>
		<h2>訂單資訊</h2>	
		<div class="form">
			<%= simple_form_for [:account, @order] do |f| %>
				<%= f.simple_fields_for :info do |c| %>
					<legend>訂購人</legend>
						<div class="col-md-6">
							<%= c.input :billing_name %>
						</div>	
						<div class="col-md-6">
							<%= c.input :billing_address %>
						</div>
					<legend>收件人</legend>
						<div class="col-md-6">
							<%= c.input :shipping_name %>
						</div>	
						<div class="col-md-6">
							<%= c.input :shipping_address %>
						</div>
				<% end %>
				<div class="checkout">
					<%= f.submit "生成訂單", class: "btn btn-warning pull-right", data: {disable_with: "Submitting...."} %>
				</div>
			<% end %>

		</div>
	</div>	
</div>