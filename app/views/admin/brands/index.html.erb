<%= provide(:title, "Brand Zone") %>
<h2>Brands List</h2>
<div class="pull-right" style="padding-bottom:20px">
<%= link_to "New Brand", new_admin_brand_path, class: "btn btn-primary btn-xs" %>
</div>
<table class="table table-hover table-bordered">
	<thead>
		<tr>
			<th>#</th>
			<th>Brand Name</th>
			<th>Brand Logo</th>
			<th>Options</th>
		</tr>
	</thead>
	<tbody>
		<% @brands.each do |brand| %>

		<tr>
			<td><%= brand.id %></td>
			<td><%= brand.brand_name %></td>
			<td><%= image_tag(brand.brand_image.thumb.url) %></td>
			<td><%= link_to "Delete", admin_brand_path(brand), method: :delete,
							data: {confirm: "確定刪除嗎？"}  %></td>
		</tr>
	<% end %>

	</tbody>
</table>