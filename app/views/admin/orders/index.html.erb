<h2>Order List</h2>
	
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>成立時間</th>
				<th>訂購人</th>
				<th>訂單金額</th>
				<th>訂單狀態</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>	
				<tr>
					<td><%= link_to order.id, admin_order_path(order) %></td>
					<td><%= order.created_on %></td>
					<td><%= order.user.email %></td>
					<td><%= order.total %></td>
					<td><%= render_order_state(order) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>