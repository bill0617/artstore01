<div class="row">
	<div class="col-md-10">
		<h2>訂單明細(<%= render_paid_or_not(@order) %>)</h2>

		<%= render "state_option", order: @order %>
		
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>商品明細</th>
					<th>單價</th>
					<th>數量</th>
				</tr>
			</thead>
			<tbody>
				<% @order_items.each do |item| %>
					<tr>
						<td><%= item.product_name %></td>
						<td><%= item.price %></td>
						<td><%= item.quantity %></td>
					</tr>
				<% end %>	
			</tbody>
		</table>	

		<div class="total clearfix">
			<span class="pull-right"> 總計 <%= @order.total %> NTD</span>
		</div>

		<hr>
		<h2>寄送資訊</h2>
			<table class="table table-striped table-bordered">
				<tbody>
					<tr>
						<td><strong>訂購人</strong></td>
					</tr>
					<tr>
						<td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
					</tr>
					<tr>
						<td><strong>收件人</strong></td>
					</tr>
					<tr>
						<td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
					</tr>
				</tbody>
			</table>
	

	</div>
</div>