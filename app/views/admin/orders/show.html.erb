<div class="row">
	<div class="col-md-12">
		<h2>訂單明細 (<%= render_paid_state(@order) %>)</h2>

		<%= render "state_option", order: @order %>	

		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<th width="80%">商品明細</th>
					<th>單價</th>
					<th>數量</th>	
					<th>小計</th>						
	</tr>
			</thead>
			<tbody>
				<% @order_items.each do |item| %>
				<tr>
					<td><%= item.product_name %></td>
					<td><%= item.price %></td>
					<td><%= item.quantity %></td>
					<td><%= item.quantity * item.price %></td>
				</tr>
				<% end %>
			</tbody>
		</table>	
		<div class="total clearfix">
			<span class="pull-right">總計 <%= @order.total %> NTD</span>
		</div>
		<hr>
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td>訂購人</td>
				</tr>
				<tr>
					<td>
						<%= @order_info.billing_name %> - <%= @order_info.billing_address %>
					</td>
				</tr>
				<tr>
					<td>收件人</td>
				</tr>
				<tr>
					<td>
						<%= @order_info.shipping_name %> - <%= @order_info.shipping_address %>
					</td>
				</tr>
			</tbody>
		</table>
		
</div>