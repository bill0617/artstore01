<div style= "padding-bottom:10px; float:right;">
	<% case order.aasm_state %>
		<% when "order_placed" %>
		<%= link_to "取消訂單", canceled_admin_order_path(order), class: "btn btn-default btn-sm", method: :post  %>
		<% when "paid" %>
		<%= link_to "取消訂單", canceled_admin_order_path(order), class: "btn btn-default btn-sm", method: :post  %>
		<%= link_to "出貨", deliver_admin_order_path(order), method: :post, class: "btn btn-info btn-sm" %>
		<% when "shipped" %>
			<%= link_to "退貨", return_admin_order_path(order) , class: "btn btn-default btn-sm", method: :post  %>
		<% when "shipping" %>
			<%= link_to "設為已出貨",  shipped_admin_order_path(order), class: "btn btn-default btn-sm", method: :post  %>
		<% when "order_canceled" %>
		<span class="label label-default">訂單已取消</span>
		
		<% when "return_good" %>
		<span class="label label-default">
			已退貨
		</span>
	<% end %>
</div>