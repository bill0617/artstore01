<div class="row">
	<div class="col-md-6">
		<%= image_tag(@product.image.url(:medium), class: "thumbnail") %>
	</div>
	<div class="col-md-6">
		<h3><%= @product.title %></h3>
		<div style="height:100px;">
			<p class="description">
				<%= @product.description %>
			</p>
		</div>
			<p>數量:  <%= @product.quantity %></p>
			<p class="product-price">價錢$:  <%= @product.price %></p>
			<div class="pull-right">
				<%= link_to "加入購物車",  add_to_cart_product_path(@product), method: :post, class: "btn btn-primary btn-lg"  %>
			</div>
	</div>
</div>