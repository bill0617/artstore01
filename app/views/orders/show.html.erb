<div class="row">
	<div class="col-md-12">
		<h2>訂單明細</h2>	

		<table class="table table-bordered">
			<thead>
				<tr>
					<th>商品明細</th>
					<th>數量</th>
					<th>價錢</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% @order_items.each do |item| %>
					<tr>
						<td><%= item.product_name %></td>
						<td><%= item.quantity %></td>
						<td><%= item.price %></td>
						<td><%= item.quantity * item.price %></td>
					</tr>
				<% end %>
			</tbody>
		</table>	
		<br>

		<div class="total clearfix">
			<span class="pull-right"> 總計 <%= @order.total %> NTD</span>
		</div>

		<hr>
		<h2>寄送資訊</h2>
			<table class="table table-striped table-bordered">
				<tbody>
					<tr>
						<td><strong>訂購人</strong></td>
					</tr>
					<tr>
						<td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
					</tr>
					<tr>
						<td><strong>收件人</strong></td>
					</tr>
					<tr>
						<td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
					</tr>
				</tbody>
			</table>
			
			<% if !@order.is_paid? %>
			<div class="pull-right" style="padding: 10px;">
				<%= render "pay_with_credit_card", order: @order %>
			</div>
			<div class="pull-right" style="padding: 10px;">
				<%= link_to "ATM付款", "#", class: "btn btn-danger btn-lg"  %>
				<% else %>
			</div>
				<p class="text-center"><strong>***** 此訂單已完成付款 *****</strong></p>
			<% end %>


	</div>
</div>