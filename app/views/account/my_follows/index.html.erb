<div class="row">
	<div class="col-md-12">
		<h3>我的追蹤清單</h3>

			<table class="table table-striped table-bordered ">
				<thead>
					<tr>
						<th colspan="2">商品資訊</th>
						<th class="times">放入日期</th>
						<th class="price">單價</th>
						<th class="options">Options</th>
					</tr>
				</thead>
				<tbody>
				<% @items.each do |product| %>
					<tr>
						<td class="picture">
							<%= link_to product_path(product), class: "thumbnail" do  %>
								<% if product.photo.present? %>
									<%= image_tag(product.photo.image.mini.url) %>
								<% else %>
									<%= image_tag("http://placehold.it/50x50&text=No Pic", class: "thumbnail") %>
								<% end %>
							<% end %>
						</td>	
						<td class="title"><%= link_to product.title, product_path(product)  %></td>

						<td class="time">
							<% item = @user.my_follows.find_by(product_id: product) %>
							<%= item.created_on %>
						</td>
						<td><%= product.price %></td>
						
						<td class="option">
							<span>
							<%= link_to account_my_follow_path(product), method: :delete, class: "btn btn-info btn-xs" do  %>
								<i class="fa fa-trash fa-lg"></i>
							<% end %>
							<span class="cart">
							<%= link_to add_follows_to_cart_account_my_follow_path(product), method: :post, class: "btn btn-success btn-xs" do  %>
								<i class="fa fa-shopping-cart fa-lg"></i>
							<% end %>
							</span>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
	
	</div>
</div>